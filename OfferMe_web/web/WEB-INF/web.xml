<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>LoginCheck</servlet-name>
        <servlet-class>com.illusionbox.offerme.control.LoginCheck</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>com.illusionbox.offerme.control.Logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FetchRestaurant</servlet-name>
        <servlet-class>com.illusionbox.offerme.control.FetchRestaurant</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FetchOffer</servlet-name>
        <servlet-class>com.illusionbox.offerme.control.FetchOffer</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddOffer</servlet-name>
        <servlet-class>com.illusionbox.offerme.control.AddOffer</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddRestaurant</servlet-name>
        <servlet-class>com.illusionbox.offerme.control.AddRestaurant</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddRestaurantManager</servlet-name>
        <servlet-class>com.illusionbox.offerme.control.AddRestaurantManager</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginCheck</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FetchRestaurant</servlet-name>
        <url-pattern>/fetch_restaurant</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FetchOffer</servlet-name>
        <url-pattern>/fetch_offer</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddOffer</servlet-name>
        <url-pattern>/add_offer</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddRestaurant</servlet-name>
        <url-pattern>/add_restaurant</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddRestaurantManager</servlet-name>
        <url-pattern>/add_restaurant_manager</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
