<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://127.0.0.1:3307/offerme?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">123</property>
    <mapping resource="com/illusionbox/offerme/model/Restaurant.hbm.xml"/>
    <mapping resource="com/illusionbox/offerme/model/Offer.hbm.xml"/>
    <mapping resource="com/illusionbox/offerme/model/Administrator.hbm.xml"/>
    <mapping resource="com/illusionbox/offerme/model/RestaurantManager.hbm.xml"/>
    <mapping resource="com/illusionbox/offerme/model/Customer.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
