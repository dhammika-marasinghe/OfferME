<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:padding="10dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Are you sure you want to take this offer?"
        android:id="@+id/textViewMessage"
        android:layout_gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:padding="5dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yes"
        android:id="@+id/buttonPositive"
        android:layout_gravity="right"
        android:layout_below="@+id/textViewMessage"
        android:layout_alignLeft="@+id/textViewMessage"
        android:layout_alignStart="@+id/textViewMessage"
        android:padding="5dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No"
        android:id="@+id/buttonNegative"
        android:layout_alignTop="@+id/buttonPositive"
        android:layout_alignRight="@+id/textViewMessage"
        android:layout_alignEnd="@+id/textViewMessage"
        android:padding="5dp" />

</RelativeLayout>